pipeline {
    agent any

    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "maven"
    }

    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/ptvprasad/addressbook-cicd-project.git'
            }
        }
        stage('compile') {
            steps {
                //compiling the code
                sh "mvn compile"
            }
        }
        stage('test') {
            step { 
                // testing the code
                sh "mvn test"
            }    
        }
        stage('package') {
            step {
                // building the package
                sh "mvn package"
            }
        }
        
        stage('deploy') {
            steps {
                //deploy
                deploy adapters: [tomcat9(credentialsId: 'tomcat-id', path: '', url: 'http://http://13.201.93.80:9090//manager/html')], contextPath: 'addressbook', war: 'target/*.war'
            }
        }
    }
}    
